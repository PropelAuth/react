{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./types",
  },
  "include": ["src"],
  "exclude": ["test", "node_modules", "dist", "src/**/*.test.*"]
}
